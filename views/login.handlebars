<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Login to Dream Post
        </h3>
    </div>

     {{#if message}}
    <div style="text-align: center" class="alert alert-{{message.type}}">
      <strong>{{message.intro}}</strong> {{message.message}}
    </div>

    {{/if}}
    <!-- Add failed login alert, if that was indicated in the model -->


    <form action="/login" method="post">
        <div class="panel-body form-horizontal">


            <!-- userid field (autofocused by default) -->
            <div class="form-group col-md-12">
                <label for="email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input type="text" name="email" class="form-control" id="email" placeholder="Email">
                </div>
            </div>
            <!-- password field (autofocused instead if there was a previous failed login -->
            <div class="form-group col-md-12">
                <label for="password" class="col-sm-2 col-form-label">Password:</label>
                <div class="col-sm-10">
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                </div>
            </div>
            <!-- login button, submits the form -->
            <div class="form-group col-md-12">
                <div class="col-md-12 text-center">
                    <button type="submit" id="login-btn" class="btn btn-primary center" type="button">Login</button>
                </div>
            </div>
        </div> <!-- end panel -->
    </form> <!-- end form -->
</div> <!-- end view -->